{
  "manifest_version": 3,
  "name": "Pomodoro Study Extension",
  "version": "1.0.0",
  "description": "Chrome extension built with React",
  "action": {
    "default_popup": "index.html",
    "default_title": "Pomodoro Study"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"]
    }
  ],
  "permissions": ["activeTab", "storage", "tabs"]
}
